    "margin-left":3,
    "margin-right":3, 
    "margin-top":2,
    "modules-left": ["hyprland/workspaces"],
    "modules-center": [],
    "modules-right": ["tray","custom/updates","custom/record","pulseaudio","memory","disk","custom/weather","clock"],
    "hyprland/workspaces": {
