      "exec-if": "exit 0",                  // always run; consider advanced run conditions
      "on-click": "bash -c 'kitty -e sudo pacman -Syu --noconfirm && notify-send \"System\" \"System Upgraded\" && curl -d \"System Upgraded on $(date +\"%A, %d %b %l:%M %p\")\" ntfy.sh/1aB-9Cf'",
      "signal": 8
    },
    "custom/playerctl":{
      "format": "{icon}",
      "return-type": "json",
      "max-length": 64,
      "exec": "playerctl -a metadata --format '{\"text\": \"{{artist}} - {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
      "on-click": "playerctl play-pause",
      "on-click-middle": "playerctl previous",
      "on-click-right": "playerctl next",
      "format-icons": {
        "Playing": "<span color='#80a4d6'>Û∞íÆ Û∞è• Û∞í≠</span>",
        "Paused": "<span color='#5770aa'>Û∞íÆ Û∞êå Û∞í≠</span>"
      }
    },
    "custom/playerlabel": {
      "format": "{}",
      "return-type": "json",
      "max-length": 48,
      "exec": "playerctl -a metadata --format '{\"text\": \"{{artist}} - {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
      "on-click-middle": "playerctl play-pause",
      "on-click": "playerctl previous",
      "on-click-right": "playerctl next",
      "format-icons": {
