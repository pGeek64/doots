      "format-ethernet": "{bandwidthDownBytes}<span color=\"#6481B5\"> Ó≠Æ </span> {bandwidthUpBytes}<span color=\"#6481B5\"> Ó≠±</span>",
      "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
